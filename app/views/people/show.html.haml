%p#notice.text-success= notice if notice

%h1.text-center.mb-4 Show person

.container
  %p
    %strong Last Name:
    = @person.last_name
  %p  
    %strong Name:
    = @person.name 

  .mt-3
    = link_to 'Edit', edit_person_path(@person), class: "btn btn-outline-primary me-2"
    = link_to 'Back', people_path, class: "btn btn-outline-secondary me-2"
    = link_to 'Destroy', person_path(@person), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"
