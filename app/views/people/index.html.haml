%h1 Listing people

%table
  %thead
    %tr
      %th Name
      %th Last name
      %th actions
      %th
      %th

  %tbody
    - @people.each do |person|
      %tr
        %td= person.name
        %td= person.last_name
        %td= link_to 'Show', person_path(person)
        %td= link_to 'Edit', edit_person_path(person)
        %td= link_to 'Destroy', person, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'are you sure?' }
     
%br

= link_to 'New Person', new_person_path
