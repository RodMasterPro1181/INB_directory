%h1 Listing People

%table
  %thead
    %tr
      %th Name
      %th Last Name
      %th Actions

  %tbody
    - @people.each do |person|
      %tr
        %td= person.name
        %td= person.last_name
        %td= link_to 'Show', person_path(person)
        %td= link_to 'Edit', edit_person_path(person)
        %td= link_to 'Destroy', person_path(person), method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Person', new_person_path
